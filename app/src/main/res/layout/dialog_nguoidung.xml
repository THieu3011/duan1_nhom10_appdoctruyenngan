<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Người Dùng"
        android:id="@+id/nguoiDungDialog_tvTenDialog"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_20ssp" />

    <EditText
        android:id="@+id/nguoiDungDialog_edTenNguoiDung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên Người Dùng"
        android:textSize="@dimen/_15ssp"
        android:maxLines="1"
        android:layout_marginTop="@dimen/_20sdp"/>

    <EditText
        android:id="@+id/truyenDialog_edMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật Khẩu"
        android:maxLines="1"
        android:textSize="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="@dimen/_20sdp">

        <Button
            android:id="@+id/nguoiDungDialog_btnDongY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15ssp"
            android:text="Thêm" />

        <Button
            android:id="@+id/nguoiDungDialog_btnTuChoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Hủy" />
    </LinearLayout>

</LinearLayout>