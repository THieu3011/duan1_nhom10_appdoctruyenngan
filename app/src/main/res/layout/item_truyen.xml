<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_20sdp"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/design_item">

    <ImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/iconbook"
        android:id="@+id/khoTruyen_imgLogoTruyen"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/khoTruyen_imgLogoTruyen"
        android:layout_toStartOf="@id/khoTruyen_layoutNutBam"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp">

        <TextView
            android:id="@+id/khoTruyen_tvTenTruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Truyện"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/khoTruyen_tvTacGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:textColor="#FF6B00"
            android:layout_marginTop="@dimen/_10sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/khoTruyen_layoutNutBam"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/khoTruyen_btnXoatruyen"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/deleteicon" />

        <ImageView
            android:id="@+id/khoTruyen_btnSuaTruyen"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/updateicon" />
    </LinearLayout>

</RelativeLayout>